{
  "auto_install_extensions": {
    "html": true,
    "toml": true,
    "git-firefly": true,
    "sql": true,
    "make": true,
    "lua": true,
    "jetbrains-new-ui-icons": true,
    "graphql": true,
    "postgres-context-server": true,
    "night-owlz": true,
    "qml": true,
    "html-jinja": true,
    "dockerfile": true,
    "docker-compose": false
  },

  // ========================================
  // AI
  // ========================================
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434"
    }
  },
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  // ========================================
  // APPEARANCE & THEME
  // ========================================
  "theme": "Night Owl Dark",
  "icon_theme": "JetBrains New UI Icons (Dark)",

  // ========================================
  // EDITOR SETTINGS
  // ========================================
  "buffer_font_size": 18,
  "buffer_line_height": { "custom": 2 },
  "cursor_blink": false,
  "relative_line_numbers": true,
  "scroll_beyond_last_line": "off",
  "vertical_scroll_margin": 0,
  "vim_mode": true,

  // ========================================
  // EDITING BEHAVIOR
  // ========================================
  "autosave": "on_focus_change",
  "format_on_save": "off",
  "show_completions_on_input": true,
  "show_edit_predictions": false,
  "hover_popover_enabled": true,
  "hide_mouse": "on_typing_and_movement",

  // ========================================
  // UI PANELS & DOCKS
  // ========================================
  "bottom_dock_layout": "full",

  "max_tabs": null,
  "tab_bar": {
    "show": false
  },

  "scrollbar": {
    "show": "never"
  },

  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
    "selections_menu": true,
    "agent_review": true,
    "code_actions": true
  },

  "status_bar": {
    "cursor_position_button": false,
    "active_language_button": false
  },

  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_project_items": true,
    "show_onboarding_banner": false,
    "show_user_picture": false,
    "show_sign_in": false,
    "show_menus": false
  },

  // ========================================
  // SIDE PANELS
  // ========================================
  "project_panel": {
    "default_width": 360,
    "button": false,
    "dock": "right",
    "entry_spacing": "comfortable",
    "hide_root": true
  },

  "collaboration_panel": {
    "button": false
  },

  "git_panel": {
    "button": false,
    "dock": "right"
  },

  "outline_panel": {
    "dock": "right",
    "button": false
  },

  // ========================================
  // TOOL PANELS (BUTTONS DISABLED)
  // ========================================
  "debugger": {
    "button": false
  },

  "inlay_hints": {
    "show_value_hints": false
  },

  "search": {
    "button": false
  },

  "diagnostics": {
    "button": false
  },

  "global_lsp_settings": {
    "button": true
  },

  "notification_panel": {
    "button": false
  },

  // ========================================
  // TERMINAL
  // ========================================
  "terminal": {
    "detect_venv": {
      "on": {
        "directories": [".venv", "venv"],
        "activate_script": "default"
      }
    },
    "button": false,
    "toolbar": {
      "breadcrumbs": false
    }
  },

  // ========================================
  // AI AGENT
  // ========================================
  "agent": {
    "always_allow_tool_actions": false,
    "play_sound_when_agent_done": false,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5-thinking"
    },
    "default_profile": "minimal",
    "button": false
  },

  // ========================================
  // FILE SCANNING & EXCLUSIONS
  // ========================================
  "file_scan_exclusions": [
    "**/.coverage",
    "**/coverage.xml",
    "**/.mypy_cache",
    "**/.hypothesis",
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/__pycache__",
    ".idea",
    ".pytest_cache",
    ".ruff_cache"
  ],

  // ========================================
  // PRIVACY & TELEMETRY
  // ========================================
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // ========================================
  // LANGUAGE SERVER PROTOCOLS
  // ========================================
  "languages": {
    "Python": {
      "language_servers": ["!pylsp", "basedpyright", "!pyright", "!ty", "ruff"]
    }
  },
  "lsp": {
    "pylsp": {
      "settings": {
        "plugins": {
          // disable plugins superseded by ruff
          "autopep8": { "enabled": false },
          "black": { "enabled": false },
          "flake8": { "enabled": false },
          "isort": { "enabled": false },
          "mccabe": { "enabled": false },
          "pycodestyle": { "enabled": false },
          "pydocstyle": { "enabled": false },
          "pyflakes": { "enabled": false },
          "pylint": { "enabled": false },
          "yapf": { "enabled": false },

          // keep the others
          "pylsp_mypy": { "enabled": true },
          "jedi": { "enabled": true },
          "rope": { "enabled": true },
          "rope_autoimport": { "enabled": true },
          "rope_completion": { "enabled": true },

          // disable pylsp ruff in favor of `ruff server`
          "ruff": { "enabled": false }
        }
      }
    },
    "ty": {
      "binary": {
        "path": "/Users/ivankosilov/.local/bin/ty",
        "arguments": ["server"]
      },
      "initialization_options": {
        "diagnosticMode": "workspace",
        "inlayHints": {
          "callArgumentNames": true,
          "variableTypes": true
        },
        "experimental": {
          "rename": true,
          "autoImport": true
        }
      }
    }
  }
}
